<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <h1 class="text-4xl font-bold mb-4">Edit Post</h1>
    <form action="/update/post/<%= post._id %>" method="POST" enctype="multipart/form-data">
        <label for="title" class="block mb-2">Title:</label>
        <input type="text" id="title" name="tittle" value="<%= post.tittle %>" class="w-full border border-gray-300 rounded-md text-black p-2 mb-4">

        <label for="description" class="block mb-2">Description:</label>
        <textarea id="description" name="description" class="w-full border text-black rounded-md border-gray-300 p-2 mb-4" rows="4"><%= post.description %></textarea>

        <label for="image" class="block mb-2">Current Image:</label>
        <img src="/images/uploads/<%= post.image %>" alt="<%= post.tittle %>" class="w-32 h-32 rounded-md object-cover mb-2 bg-sky-200">
        <input type="file" id="image" name="image" accept="image/*" class="mb-4 mt-3">

        <!-- Add any other fields you want to edit -->

        <button type="submit" class="bg-blue-500 block text-white px-4 py-2 rounded-md">Update</button>
    </form>
</div>
<% include ./partials/footer.ejs %>
